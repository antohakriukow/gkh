{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"semi": false,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^~/components/(.*)$",
		"^~/hooks/(.*)$",
		"^~/shared/(.*)$",
		"^~/services/(.*)$",
		"^~/assets/(.*)$",
		"^~/utils/(.*)$",
		"^~/config/(.*)$",
		"^~/providers/(.*)$",
		"^~/store/(.*)$",
		"^../(.*)",
		"^./(.tsx)",
		"^./(.ts)",
		"(.scss)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
